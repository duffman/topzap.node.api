{
  "compilerOptions": {
  "module": "commonjs",
  "target": "es6",
  "noImplicitAny": false,
  "sourceMap": false,
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true,
  "outDir": "dist",
  "baseUrl": "./",
  "paths": {
    "@app/*": ["./app/*"],
    "@api/*": ["./app/api/*"],
    "@core/*": ["./app/core/*"],
    "@cli/*": ["./app/cli/*"],
    "@miner/*": ["./miner/*"],
    "@models/*": ["./models/*"],
    "@db/*": ["./lib/database/*"],
    "@utils/*": ["./lib/utils/*"],
    "@putte/*": ["./lib/putte-ts/*"],
    "@zaplib/*": ["./lib/topzap-utils-lib/*"]
  }
},
  "exclude": [
    "node_modules"
  ]
}
